<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/container"
        app:cardElevation="@dimen/w10"
        app:cardCornerRadius="@dimen/w10"
        android:layout_marginTop="@dimen/w10"
        android:layout_marginBottom="@dimen/w10"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
            android:padding="@dimen/w10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w100">
        <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginStart="@dimen/w40"
                android:textColor="@color/btn_start_game"
                android:layout_gravity="center"
                android:textSize="@dimen/w20"
                android:text="@string/multi_play"
                android:id="@+id/tv_titleOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>